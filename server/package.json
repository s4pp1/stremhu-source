{
  "name": "@stremhu/source",
  "description": "Magyar forrásokból elérhető streamek Stremio-hoz: WebTorrent-alapú lejátszás, felbontás/nyelv beállítások és saját tracker-hitelesítés.",
  "author": "Benedek Bálint",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "node -r ts-node/register -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/data-source.ts",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:show": "npm run typeorm -- migration:show",
    "generate:catalog:openapi": "openapi --input https://catalog.stremhu.app/api/docs/public-json -c axios -o ./src/catalog-client/client/ --name CatalogClient",
    "generate:relay:openapi": "openapi --input ../relay/openapi/openapi.json -c axios -o ./src/relay/client/ --name RelayClient"
  },
  "dependencies": {
    "@ctrl/torrent-file": "4.5.0",
    "@ctrl/video-filename-parser": "5.4.1",
    "@nestjs/common": "11.1.14",
    "@nestjs/config": "4.0.3",
    "@nestjs/core": "11.1.14",
    "@nestjs/platform-express": "11.1.14",
    "@nestjs/schedule": "6.1.1",
    "@nestjs/serve-static": "5.0.4",
    "@nestjs/swagger": "11.2.6",
    "@nestjs/typeorm": "11.0.0",
    "@node-rs/argon2": "2.0.2",
    "axios": "1.13.5",
    "axios-retry": "4.5.0",
    "better-sqlite3": "12.6.2",
    "bottleneck": "2.19.5",
    "cheerio": "1.2.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "express-session": "1.19.0",
    "filesize": "11.0.13",
    "http-cookie-agent": "7.0.3",
    "http-proxy-middleware": "3.0.5",
    "internal-ip": "9.0.0",
    "ip-address": "10.1.0",
    "is-video": "2.0.0",
    "jose": "6.1.3",
    "lodash": "4.17.23",
    "ms": "2.1.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "semver": "7.7.4",
    "tough-cookie": "6.0.0",
    "typeorm": "0.3.28",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "10.0.1",
    "@nestjs/cli": "11.0.16",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.14",
    "@trivago/prettier-plugin-sort-imports": "6.0.2",
    "@types/better-sqlite3": "7.6.13",
    "@types/express": "5.0.6",
    "@types/express-session": "1.18.2",
    "@types/jest": "30.0.0",
    "@types/lodash": "4.17.23",
    "@types/ms": "2.1.0",
    "@types/node": "^22",
    "@types/semver": "7.7.1",
    "@types/supertest": "6.0.3",
    "eslint": "10.0.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "globals": "17.3.0",
    "jest": "30.2.0",
    "openapi-typescript-codegen": "0.30.0",
    "prettier": "3.8.1",
    "source-map-support": "0.5.21",
    "supertest": "7.2.2",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
